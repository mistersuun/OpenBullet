<Window x:Class="OpenBullet_Replica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenBullet Anomaly Replica" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#606060"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#353535"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27ae60"/>
            <Setter Property="BorderBrush" Value="#2ecc71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2ecc71"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Setter Property="BorderBrush" Value="#c0392b"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Warning Button Style -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#f39c12"/>
            <Setter Property="BorderBrush" Value="#e67e22"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e67e22"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2c2c2c"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#606060"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498db"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#606060" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#2c2c2c" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <TextBlock Text="🎯" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="OpenBullet Anomaly Replica" Foreground="#ffffff" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="v2.0 Professional" Foreground="#3498db" FontSize="10" Margin="10,0,0,0" VerticalAlignment="Bottom"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="➖" Width="40" Height="30" Background="Transparent" Foreground="#ffffff" 
                                BorderThickness="0" Click="Minimize_Click"/>
                        <Button Content="🗖" Width="40" Height="30" Background="Transparent" Foreground="#ffffff" 
                                BorderThickness="0" Click="Maximize_Click"/>
                        <Button Content="❌" Width="40" Height="30" Background="Transparent" Foreground="#ffffff" 
                                BorderThickness="0" Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Sidebar -->
                <Border Grid.Column="0" Background="#252525" BorderBrush="#404040" BorderThickness="0,0,1,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="15">
                            
                            <!-- Config Section -->
                            <TextBlock Text="CONFIG MANAGEMENT" Foreground="#3498db" FontWeight="Bold" FontSize="12" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Content="📂 Load Config" Style="{StaticResource ModernButton}" Click="LoadConfig_Click" HorizontalAlignment="Stretch"/>
                                <Button Grid.Row="1" Content="💾 Save Config" Style="{StaticResource ModernButton}" Click="SaveConfig_Click" HorizontalAlignment="Stretch"/>
                                <Button Grid.Row="2" Content="🔬 Test 5 Emails" Style="{StaticResource WarningButton}" Click="TestFiveEmails_Click" HorizontalAlignment="Stretch"/>
                                
                                <TextBlock Grid.Row="3" Text="Config Name:" Foreground="#cccccc" Margin="0,10,0,5"/>
                                <TextBox Grid.Row="4" x:Name="txtConfigName" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Grid.Row="5" x:Name="lblConfigStatus" Text="No config loaded" Foreground="#e74c3c" FontSize="10" Margin="0,5,0,0"/>
                            </Grid>
                            
                            <!-- Wordlist Section -->
                            <TextBlock Text="WORDLIST MANAGEMENT" Foreground="#e67e22" FontWeight="Bold" FontSize="12" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Content="📋 Load Wordlist" Style="{StaticResource ModernButton}" Click="LoadWordlist_Click" HorizontalAlignment="Stretch"/>
                                <TextBlock Grid.Row="1" Text="Wordlist:" Foreground="#cccccc" Margin="0,10,0,5"/>
                                <TextBox Grid.Row="2" x:Name="txtWordlistPath" Style="{StaticResource ModernTextBox}" IsReadOnly="True"/>
                                <TextBlock Grid.Row="3" x:Name="lblWordlistStatus" Text="No wordlist loaded" Foreground="#e74c3c" FontSize="10" Margin="0,5,0,0"/>
                            </Grid>
                            
                            <!-- Proxy Section -->
                            <TextBlock Text="PROXY MANAGEMENT" Foreground="#9b59b6" FontWeight="Bold" FontSize="12" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Button Grid.Row="0" Content="🌐 Load Proxies" Style="{StaticResource ModernButton}" Click="LoadProxies_Click" HorizontalAlignment="Stretch"/>
                                <Button Grid.Row="1" Content="🧪 Test Proxies" Style="{StaticResource ModernButton}" Click="TestProxies_Click" HorizontalAlignment="Stretch"/>
                                <TextBlock Grid.Row="2" x:Name="lblProxyStatus" Text="No proxies loaded" Foreground="#e74c3c" FontSize="10" Margin="0,10,0,0"/>
                                <TextBlock Grid.Row="3" x:Name="lblProxyCount" Text="Count: 0" Foreground="#95a5a6" FontSize="10"/>
                            </Grid>
                            
                            <!-- Settings Section -->
                            <TextBlock Text="RUNNER SETTINGS" Foreground="#2ecc71" FontWeight="Bold" FontSize="12" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Bots:" Foreground="#cccccc" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" x:Name="txtBotCount" Style="{StaticResource ModernTextBox}" Text="5"/>
                                
                                <TextBlock Grid.Row="2" Text="Timeout (s):" Foreground="#cccccc" Margin="0,10,0,5"/>
                                <TextBox Grid.Row="3" x:Name="txtTimeout" Style="{StaticResource ModernTextBox}" Text="30"/>
                                
                                <CheckBox Grid.Row="4" x:Name="chkUseProxies" Content="Use Proxies" Foreground="#cccccc" Margin="0,10,0,0"/>
                                <CheckBox Grid.Row="5" x:Name="chkSaveHits" Content="Save Hits to DB" Foreground="#cccccc" Margin="0,5,0,0"/>
                            </Grid>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                
                <!-- Right Content Area -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Control Panel -->
                    <Border Grid.Row="0" Background="#2c2c2c" Padding="20" BorderBrush="#404040" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Runner Controls -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button x:Name="btnStart" Content="▶️ START" Style="{StaticResource SuccessButton}" Click="StartRunner_Click" Width="100" Height="40"/>
                                <Button x:Name="btnStop" Content="⏹️ STOP" Style="{StaticResource DangerButton}" Click="StopRunner_Click" Width="100" Height="40"/>
                                <Button x:Name="btnPause" Content="⏸️ PAUSE" Style="{StaticResource WarningButton}" Click="PauseRunner_Click" Width="100" Height="40"/>
                            </StackPanel>
                            
                            <!-- Quick Stats -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border Background="#27ae60" CornerRadius="15" Padding="12,4" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✅ " FontSize="12"/>
                                        <TextBlock x:Name="lblQuickHits" Text="0" Foreground="White" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#e74c3c" CornerRadius="15" Padding="12,4" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="❌ " FontSize="12"/>
                                        <TextBlock x:Name="lblQuickFails" Text="0" Foreground="White" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#3498db" CornerRadius="15" Padding="12,4" Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🚀 " FontSize="12"/>
                                        <TextBlock x:Name="lblQuickCPM" Text="0" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock Text=" CPM" Foreground="White" FontSize="10" VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Main Work Area -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Script Editor -->
                        <Border Grid.Column="0" Background="#1e1e1e" Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="LOLISCRIPT EDITOR" Foreground="#3498db" FontWeight="Bold" 
                                         Margin="15,15,15,10" FontSize="12"/>
                                
                                <Border Grid.Row="1" Background="#1a1a1a" BorderBrush="#404040" BorderThickness="1" 
                                        Margin="15,0,15,15" CornerRadius="4">
                                    <TextBox x:Name="txtScriptEditor" Background="Transparent" Foreground="#ffffff" 
                                           BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                           ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                           TextWrapping="NoWrap" FontFamily="Consolas" FontSize="11"
                                           Padding="10" AcceptsReturn="True"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Statistics & Log Panel -->
                        <Border Grid.Column="1" Background="#252525" Margin="0,10,10,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Statistics -->
                                <TextBlock Grid.Row="0" Text="LIVE STATISTICS" Foreground="#2ecc71" FontWeight="Bold" 
                                         Margin="15,15,15,10" FontSize="12"/>
                                
                                <Border Grid.Row="1" Background="#2c2c2c" BorderBrush="#404040" BorderThickness="1" 
                                        Margin="15,0,15,15" CornerRadius="4">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="15">
                                            
                                            <!-- Main Stats -->
                                            <Grid Margin="0,0,0,15">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Tested -->
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tested:" Foreground="#cccccc" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblTested" Text="0" Foreground="#ffffff" 
                                                         FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                                
                                                <!-- Hits -->
                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Valid Accounts:" Foreground="#27ae60" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblHits" Text="0" Foreground="#27ae60" 
                                                         FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                                
                                                <!-- Fails -->
                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Invalid:" Foreground="#e74c3c" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblFails" Text="0" Foreground="#e74c3c" 
                                                         FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                                
                                                <!-- Success Rate -->
                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Success Rate:" Foreground="#f39c12" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblSuccessRate" Text="0%" Foreground="#f39c12" 
                                                         FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                                
                                                <!-- CPM -->
                                                <TextBlock Grid.Row="4" Grid.Column="0" Text="CPM:" Foreground="#3498db" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="lblCPM" Text="0" Foreground="#3498db" 
                                                         FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                            </Grid>
                                            
                                            <!-- Progress Bar -->
                                            <TextBlock Text="PROGRESS" Foreground="#3498db" FontWeight="Bold" FontSize="10" Margin="0,15,0,5"/>
                                            <ProgressBar x:Name="progressBar" Height="20" Background="#404040" Foreground="#3498db" 
                                                       BorderBrush="#606060" BorderThickness="1"/>
                                            <TextBlock x:Name="lblProgressText" Text="Ready to start" Foreground="#95a5a6" FontSize="9" 
                                                     HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                            
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                                
                                <!-- Log Header -->
                                <TextBlock Grid.Row="2" Text="EXECUTION LOG" Foreground="#e67e22" FontWeight="Bold" 
                                         Margin="15,15,15,10" FontSize="12"/>
                                
                                <!-- Bot Log -->
                                <Border Grid.Row="3" Background="#1a1a1a" BorderBrush="#404040" BorderThickness="1" 
                                        Margin="15,0,15,15" CornerRadius="4">
                                    <TextBox x:Name="txtBotLog" Background="Transparent" Foreground="#ffffff" 
                                           BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                           IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"
                                           Padding="10"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            
            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#2c2c2c" BorderBrush="#404040" BorderThickness="0,1,0,0">
                <Grid Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" x:Name="statusText" Text="Ready - Load a config and wordlist to begin" 
                             Foreground="#95a5a6" FontSize="11" VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="OpenBullet Anomaly Replica v2.0" Foreground="#95a5a6" FontSize="10" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

