<Window x:Class="OpenBullet.Native.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenBullet.Native"
        mc:Ignorable="d"
        Title="OpenBullet Native - Reverse Engineered" Height="700" Width="1200"
        WindowState="Maximized" Background="#FF2D2D30">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="🔧 OpenBullet Native - Using Original DLLs" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#FF00D4FF" Margin="0,0,20,0"/>
            <TextBlock Text="Status: Ready" 
                       x:Name="txtStatus"
                       FontSize="16" 
                       Foreground="#FFADFF2F" VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button x:Name="btnLoadConfig" Content="📁 Load Config (.anom)" 
                    Width="150" Height="35" Margin="0,0,10,0"
                    Click="LoadConfig_Click"/>
            <Button x:Name="btnLoadWordlist" Content="📄 Load Wordlist" 
                    Width="120" Height="35" Margin="0,0,10,0"
                    Click="LoadWordlist_Click"/>
            <Button x:Name="btnCreateSampleData" Content="📋 Create Sample Data" 
                    Width="140" Height="35" Margin="0,0,10,0"
                    Click="CreateSampleData_Click"/>
            <Button x:Name="btnStart" Content="▶️ Start" 
                    Width="80" Height="35" Margin="0,0,10,0"
                    Click="Start_Click" IsEnabled="False"/>
            <Button x:Name="btnStop" Content="⏹️ Stop" 
                    Width="80" Height="35" Margin="0,0,10,0"
                    Click="Stop_Click" IsEnabled="False"/>
            <Button x:Name="btnCopyLogs" Content="📝 Copy Log File" 
                    Width="120" Height="35" Margin="0,0,10,0"
                    Click="CopyLogs_Click"/>
            <TextBlock Text="Threads:" VerticalAlignment="Center" 
                       Margin="20,0,5,0" Foreground="White"/>
            <TextBox x:Name="txtThreads" Text="100" Width="60" Height="25"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Log Area -->
            <Border Grid.Column="0" Background="#FF1E1E1E" BorderBrush="#FF404040" BorderThickness="1">
                <ScrollViewer x:Name="logScrollViewer" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtLog" 
                               TextWrapping="Wrap" 
                               FontFamily="Consolas" 
                               FontSize="12" 
                               Foreground="#FFCCCCCC"
                               Margin="10"/>
                </ScrollViewer>
            </Border>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF404040"/>
            
            <!-- Statistics Panel -->
            <Border Grid.Column="2" Background="#FF252526" BorderBrush="#FF404040" BorderThickness="1">
                <StackPanel Margin="15">
                    <TextBlock Text="📊 Statistics" FontSize="16" FontWeight="Bold" 
                               Foreground="#FF00D4FF" Margin="0,0,0,15"/>
                    
                    <!-- Basic Stats -->
    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tested:" Foreground="White"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="lblTested" Text="0" 
                                   Foreground="#FFADFF2F" HorizontalAlignment="Right"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Hits:" Foreground="White"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="lblHits" Text="0" 
                                   Foreground="#FF00FF00" HorizontalAlignment="Right"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Fails:" Foreground="White"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="lblFails" Text="0" 
                                   Foreground="#FFFF6347" HorizontalAlignment="Right"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Errors:" Foreground="White"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="lblErrors" Text="0" 
                                   Foreground="#FFFF4500" HorizontalAlignment="Right"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="CPM:" Foreground="White"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="lblCPM" Text="0" 
                                   Foreground="#FFFFFF00" HorizontalAlignment="Right"/>
                        
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Success Rate:" Foreground="White"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="lblSuccessRate" Text="0%" 
                                   Foreground="#FF00BFFF" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <Separator Margin="0,15,0,15" Background="#FF404040"/>
                    
                    <!-- Config Info -->
                    <TextBlock Text="📄 Config Info" FontSize="14" FontWeight="Bold" 
                               Foreground="#FF00D4FF" Margin="0,0,0,10"/>
                    <TextBlock x:Name="lblConfigName" Text="No config loaded" 
                               Foreground="#FFCCCCCC" TextWrapping="Wrap"/>
                    <TextBlock x:Name="lblConfigAuthor" Text="" 
                               Foreground="#FFAAAAAA" FontSize="11"/>
                    
                    <Separator Margin="0,15,0,15" Background="#FF404040"/>
                    
                    <!-- Wordlist Info -->
                    <TextBlock Text="📋 Wordlist Info" FontSize="14" FontWeight="Bold" 
                               Foreground="#FF00D4FF" Margin="0,0,0,10"/>
                    <TextBlock x:Name="lblWordlistInfo" Text="No wordlist loaded" 
                               Foreground="#FFCCCCCC"/>
                    
                    <Separator Margin="0,15,0,15" Background="#FF404040"/>
                    
                    <!-- RuriLib Integration Status -->
                    <TextBlock Text="🔧 Integration Status" FontSize="14" FontWeight="Bold" 
                               Foreground="#FF00D4FF" Margin="0,0,0,10"/>
                    <TextBlock x:Name="lblRuriLibStatus" Text="Initializing..." 
                               Foreground="#FFCCCCCC"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#FF007ACC" Height="30" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="🚀 OpenBullet Native v2.0 - Direct DLL Integration" 
                           Foreground="White" FontWeight="Bold"/>
                <TextBlock x:Name="lblElapsedTime" Text=" | Elapsed: 00:00:00" 
                           Foreground="White" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
