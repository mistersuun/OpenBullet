<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50" />
    <SolidColorBrush x:Key="FailureBrush" Color="#F44336" />
    <SolidColorBrush x:Key="RunningBrush" Color="#2196F3" />
    <SolidColorBrush x:Key="BannedBrush" Color="#FF9800" />
    <SolidColorBrush x:Key="RetryBrush" Color="#9C27B0" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FF9800" />
    <SolidColorBrush x:Key="InfoBrush" Color="#2196F3" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336" />

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4CAF50" Offset="0" />
        <GradientStop Color="#8BC34A" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="FailureGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F44336" Offset="0" />
        <GradientStop Color="#E91E63" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="RunningGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2196F3" Offset="0" />
        <GradientStop Color="#03DAC6" Offset="1" />
    </LinearGradientBrush>

    <!-- Chart Colors -->
    <SolidColorBrush x:Key="Chart1Brush" Color="#673AB7" />
    <SolidColorBrush x:Key="Chart2Brush" Color="#3F51B5" />
    <SolidColorBrush x:Key="Chart3Brush" Color="#2196F3" />
    <SolidColorBrush x:Key="Chart4Brush" Color="#009688" />
    <SolidColorBrush x:Key="Chart5Brush" Color="#4CAF50" />

</ResourceDictionary>
