<Application x:Class="OpenBullet.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                
                <!-- Custom Styles -->
                <ResourceDictionary Source="Styles/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            
            <!-- Status Colors -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50" />
            <SolidColorBrush x:Key="FailureBrush" Color="#F44336" />
            <SolidColorBrush x:Key="RunningBrush" Color="#2196F3" />
            <SolidColorBrush x:Key="BannedBrush" Color="#FF9800" />
            <SolidColorBrush x:Key="RetryBrush" Color="#9C27B0" />
            
            <!-- Card Style -->
            <Style x:Key="ModernCard" TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="8" />
                <Setter Property="Padding" Value="16" />
                <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.3" ShadowDepth="3" />
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
