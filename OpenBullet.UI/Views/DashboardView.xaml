<UserControl x:Class="OpenBullet.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:viewModels="clr-namespace:OpenBullet.UI.ViewModels">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="16">
            
            <!-- Page Header -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" />
                    <TextBlock Text="Real-time monitoring and system overview" FontSize="14" Opacity="0.7" />
                </StackPanel>
                
                <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}" 
                        Command="{Binding RefreshCommand}" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" Margin="0,0,8,0" />
                        <TextBlock Text="Refresh" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Statistics Cards -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Configurations Card -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Configurations" FontSize="14" Opacity="0.7" />
                                <TextBlock Text="{Binding TotalConfigurations}" FontSize="32" FontWeight="Bold" />
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="FileDocumentMultiple" 
                                                     Width="40" Height="40" Opacity="0.3" />
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Jobs Card -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Jobs" FontSize="14" Opacity="0.7" />
                                <TextBlock Text="{Binding TotalJobs}" FontSize="32" FontWeight="Bold" />
                                <TextBlock FontSize="12" Opacity="0.6">
                                    <Run Text="{Binding RunningJobs}" />
                                    <Run Text="running" />
                                </TextBlock>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="PlayBoxMultiple" 
                                                     Width="40" Height="40" Opacity="0.3" />
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Proxies Card -->
                <materialDesign:Card Grid.Column="2" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Proxies" FontSize="14" Opacity="0.7" />
                                <TextBlock Text="{Binding TotalProxies}" FontSize="32" FontWeight="Bold" />
                                <TextBlock FontSize="12" Opacity="0.6">
                                    <Run Text="{Binding HealthyProxies}" />
                                    <Run Text="healthy" />
                                </TextBlock>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="ServerNetwork" 
                                                     Width="40" Height="40" Opacity="0.3" />
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Success Rate Card -->
                <materialDesign:Card Grid.Column="3" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Success Rate" FontSize="14" Opacity="0.7" />
                                <TextBlock FontSize="32" FontWeight="Bold">
                                    <Run Text="{Binding OverallSuccessRate, StringFormat={}{0:F1}}" />
                                    <Run Text="%" FontSize="20" />
                                </TextBlock>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="CheckCircle" 
                                                     Width="40" Height="40" Opacity="0.3" />
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Charts Section -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Job Status Chart -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="Job Status Distribution" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" />
                        <lvc:PieChart Series="{Binding JobStatusChart}" Height="200" />
                    </StackPanel>
                </materialDesign:Card>

                <!-- Proxy Health Chart -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="Proxy Health Status" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" />
                        <lvc:CartesianChart Series="{Binding ProxyHealthChart}" Height="200">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding ProxyHealthLabels}" />
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Success Rate Trend -->
            <materialDesign:Card Style="{StaticResource ModernCard}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Success Rate Trend (Last 7 Days)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" />
                    <lvc:CartesianChart Series="{Binding SuccessRateChart}" Height="200">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Labels="{Binding TimeLabels}" />
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MinValue="0" MaxValue="100" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </StackPanel>
            </materialDesign:Card>

            <!-- Bottom Section -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Recent Activity -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="Recent Activity" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" />
                        <ItemsControl ItemsSource="{Binding RecentActivities}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <materialDesign:PackIcon Grid.Column="0" Kind="{Binding Icon}" 
                                                                     Width="16" Height="16" VerticalAlignment="Top" Margin="0,2,12,0" />
                                            <TextBlock Grid.Column="1" Text="{Binding Description}" TextWrapping="Wrap" />
                                            <TextBlock Grid.Column="2" Text="{Binding TimeAgo}" FontSize="11" 
                                                       Opacity="0.6" VerticalAlignment="Top" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Quick Actions -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <Button Grid.Row="0" Grid.Column="0" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Command="{Binding QuickActions[0].Command}" 
                                    Margin="4" 
                                    Padding="16,12"
                                    Height="48"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding QuickActions[0].Icon}" 
                                                             Margin="0,0,8,0" 
                                                             Width="20" 
                                                             Height="20" />
                                    <TextBlock Text="{Binding QuickActions[0].Name}" 
                                               FontSize="13" 
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Command="{Binding QuickActions[1].Command}" 
                                    Margin="4" 
                                    Padding="16,12"
                                    Height="48"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding QuickActions[1].Icon}" 
                                                             Margin="0,0,8,0" 
                                                             Width="20" 
                                                             Height="20" />
                                    <TextBlock Text="{Binding QuickActions[1].Name}" 
                                               FontSize="13" 
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Row 2 -->
                            <Button Grid.Row="1" Grid.Column="0" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Command="{Binding QuickActions[2].Command}" 
                                    Margin="4" 
                                    Padding="16,12"
                                    Height="48"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding QuickActions[2].Icon}" 
                                                             Margin="0,0,8,0" 
                                                             Width="20" 
                                                             Height="20" />
                                    <TextBlock Text="{Binding QuickActions[2].Name}" 
                                               FontSize="13" 
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Command="{Binding QuickActions[3].Command}" 
                                    Margin="4" 
                                    Padding="16,12"
                                    Height="48"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding QuickActions[3].Icon}" 
                                                             Margin="0,0,8,0" 
                                                             Width="20" 
                                                             Height="20" />
                                    <TextBlock Text="{Binding QuickActions[3].Name}" 
                                               FontSize="13" 
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <!-- Row 3 -->
                            <Button Grid.Row="2" Grid.Column="0" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Command="{Binding QuickActions[4].Command}" 
                                    Margin="4" 
                                    Padding="16,12"
                                    Height="48"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding QuickActions[4].Icon}" 
                                                             Margin="0,0,8,0" 
                                                             Width="20" 
                                                             Height="20" />
                                    <TextBlock Text="{Binding QuickActions[4].Name}" 
                                               FontSize="13" 
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="1" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Command="{Binding QuickActions[5].Command}" 
                                    Margin="4" 
                                    Padding="16,12"
                                    Height="48"
                                    HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="{Binding QuickActions[5].Icon}" 
                                                             Margin="0,0,8,0" 
                                                             Width="20" 
                                                             Height="20" />
                                    <TextBlock Text="{Binding QuickActions[5].Name}" 
                                               FontSize="13" 
                                               VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- System Information -->
            <materialDesign:Card Style="{StaticResource ModernCard}" Margin="0,24,0,0">
                <StackPanel>
                    <TextBlock Text="System Information" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Database Size" FontSize="12" Opacity="0.7" />
                            <TextBlock Text="{Binding DatabaseSize}" FontSize="14" FontWeight="Medium" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Total Results" FontSize="12" Opacity="0.7" />
                            <TextBlock Text="{Binding TotalResults, StringFormat={}{0:N0}}" FontSize="14" FontWeight="Medium" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Uptime" FontSize="12" Opacity="0.7" />
                            <TextBlock Text="{Binding SystemUptime, StringFormat={}{0:hh\\:mm\\:ss}}" FontSize="14" FontWeight="Medium" />
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Version" FontSize="12" Opacity="0.7" />
                            <TextBlock Text="1.0.0" FontSize="14" FontWeight="Medium" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>
