<UserControl x:Class="OpenBullet.UI.Views.JobListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Jobs" FontSize="28" FontWeight="Bold" />
            <TextBlock Text="Monitor and manage automation jobs" FontSize="14" Opacity="0.7" />
        </StackPanel>

        <!-- Job Management Interface -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Action Bar -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBox materialDesign:HintAssist.Hint="Search jobs..." Width="200" Margin="0,0,16,0"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <ComboBox materialDesign:HintAssist.Hint="Filter by status" Width="120" 
                                  SelectedItem="{Binding StatusFilter}">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Running"/>
                            <ComboBoxItem Content="Completed"/>
                            <ComboBoxItem Content="Failed"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                                Command="{Binding CreateJobCommand}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Margin="0,0,4,0"/>
                                <TextBlock Text="New Job"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Command="{Binding RefreshCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" Margin="0,0,4,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Job List -->
            <materialDesign:Card Grid.Row="1" Padding="0">
                <Grid>
                    <DataGrid ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob}"
                              AutoGenerateColumns="False" CanUserReorderColumns="False" 
                              CanUserResizeColumns="True" IsReadOnly="True"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Configuration" Binding="{Binding ConfigurationName}" Width="150"/>
                            
                            <DataGridTemplateColumn Header="Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center"
                                                Background="{Binding StatusColor}">
                                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold" 
                                                       Foreground="White" FontSize="10"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Progress" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <ProgressBar Value="{Binding ProgressPercentage}" Maximum="100" Height="4"/>
                                            <TextBlock Text="{Binding ProgressText}" FontSize="10" 
                                                       HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Success" Binding="{Binding SuccessCount}" Width="80"/>
                            <DataGridTextColumn Header="Failed" Binding="{Binding FailedCount}" Width="80"/>
                            <DataGridTextColumn Header="Rate" Binding="{Binding ProcessingRate}" Width="100"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat='MMM dd, HH:mm'}" Width="120"/>

                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    Command="{Binding DataContext.StartJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Start Job">
                                                <materialDesign:PackIcon Kind="Play" Foreground="Green"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    Command="{Binding DataContext.StopJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Stop Job">
                                                <materialDesign:PackIcon Kind="Stop" Foreground="Red"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    Command="{Binding DataContext.ViewJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="View Details">
                                                <materialDesign:PackIcon Kind="Eye"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}" 
                                                    Command="{Binding DataContext.DeleteJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Delete Job">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="Red"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Empty State -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="PlayBoxMultipleOutline" Width="64" Height="64" Opacity="0.3"/>
                        <TextBlock Text="No Jobs Found" FontSize="18" FontWeight="SemiBold" 
                                   Margin="0,16,0,8" HorizontalAlignment="Center"/>
                        <TextBlock Text="Create your first automation job to get started" FontSize="12" 
                                   Opacity="0.7" HorizontalAlignment="Center"/>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                                Command="{Binding CreateJobCommand}" Margin="0,16,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Margin="0,0,4,0"/>
                                <TextBlock Text="Create First Job"/>
                            </StackPanel>
                        </Button>
            </StackPanel>
                </Grid>
        </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
