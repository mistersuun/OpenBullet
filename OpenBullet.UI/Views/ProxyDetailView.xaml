<UserControl x:Class="OpenBullet.UI.Views.ProxyDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Proxy Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" Kind="Server" Width="32" Height="32" 
                                       VerticalAlignment="Center" Margin="0,0,16,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ProxyAddress}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ProxyType}" FontSize="12" Opacity="0.7" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Command="{Binding TestProxyCommand}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TestTube" Margin="0,0,4,0"/>
                            <TextBlock Text="Test"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Command="{Binding SaveProxyCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,4,0"/>
                            <TextBlock Text="Save"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Proxy Configuration -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="Connection Details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                    
                    <TextBox materialDesign:HintAssist.Hint="Host" Text="{Binding ProxyHost}" Margin="0,0,0,8"/>
                    <TextBox materialDesign:HintAssist.Hint="Port" Text="{Binding ProxyPort}" Margin="0,0,0,8"/>
                    <TextBox materialDesign:HintAssist.Hint="Username (optional)" Text="{Binding ProxyUsername}" Margin="0,0,0,8"/>
                    <PasswordBox materialDesign:HintAssist.Hint="Password (optional)" Margin="0,0,0,8"/>
                    
                    <ComboBox materialDesign:HintAssist.Hint="Proxy Type" SelectedItem="{Binding ProxyType}" Margin="0,0,0,8">
                        <ComboBoxItem Content="HTTP"/>
                        <ComboBoxItem Content="SOCKS4"/>
                        <ComboBoxItem Content="SOCKS5"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Status &amp; Statistics" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Status" VerticalAlignment="Center"/>
                        <Border Grid.Column="1" CornerRadius="12" Padding="8,4" Background="{Binding StatusColor}">
                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="10" FontWeight="SemiBold"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Response Time" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding ResponseTime}" FontWeight="SemiBold"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Usage Count" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding UsageCount}" FontWeight="SemiBold"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Last Used" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding LastUsed, StringFormat='MMM dd, HH:mm'}" FontWeight="SemiBold"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Country" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Country}" FontWeight="SemiBold"/>
                    </Grid>
            </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Test Results -->
        <materialDesign:Card Grid.Row="2" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Test History" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                
                <DataGrid Grid.Row="1" ItemsSource="{Binding TestHistory}" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Test Date" Binding="{Binding TestDate, StringFormat='MMM dd, HH:mm:ss'}" Width="150"/>
                        <DataGridTemplateColumn Header="Result" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:PackIcon Kind="{Binding ResultIcon}" 
                                                           Foreground="{Binding ResultColor}" 
                                                           HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Response Time" Binding="{Binding ResponseTime}" Width="120"/>
                        <DataGridTextColumn Header="Error Message" Binding="{Binding ErrorMessage}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
