<UserControl x:Class="OpenBullet.UI.Views.JobDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Job Header -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0" Kind="PlayCircle" Width="32" Height="32" 
                                       VerticalAlignment="Center" Margin="0,0,16,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding JobName}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding JobDescription}" FontSize="12" Opacity="0.7" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Command="{Binding StartJobCommand}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Play" Margin="0,0,4,0"/>
                            <TextBlock Text="Start"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Command="{Binding StopJobCommand}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Stop" Margin="0,0,4,0"/>
                            <TextBlock Text="Stop"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Job Statistics -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Status" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding JobStatus}" FontSize="16" Margin="0,4,0,0" 
                               HorizontalAlignment="Center" Foreground="{Binding StatusColor}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Progress" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ProgressText}" FontSize="16" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                    <ProgressBar Value="{Binding ProgressPercentage}" Maximum="100" Width="80" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Success" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SuccessCount}" FontSize="16" Margin="0,4,0,0" 
                               HorizontalAlignment="Center" Foreground="Green"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Failed" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding FailedCount}" FontSize="16" Margin="0,4,0,0" 
                               HorizontalAlignment="Center" Foreground="Red"/>
                </StackPanel>

                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="Rate" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ProcessingRate}" FontSize="16" Margin="0,4,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Job Logs and Results -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Real-time Logs -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Live Logs" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding LogEntries}" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="{Binding Timestamp}" FontSize="10" Opacity="0.7" Width="80"/>
                                        <TextBlock Text="{Binding Level}" FontSize="10" Width="50" 
                                                   Foreground="{Binding LevelColor}"/>
                                        <TextBlock Text="{Binding Message}" FontSize="11" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <!-- Results Panel -->
            <materialDesign:Card Grid.Column="1" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Recent Results" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox ItemsSource="{Binding RecentResults}" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,4" Margin="0,1" CornerRadius="4" 
                                            Background="{Binding ResultColor}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Data}" FontSize="11" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Status}" FontSize="10" Opacity="0.8"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Command="{Binding ViewAllResultsCommand}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewList" Margin="0,0,4,0"/>
                                <TextBlock Text="View All"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Command="{Binding ExportResultsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Download" Margin="0,0,4,0"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button>
            </StackPanel>
                </Grid>
        </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
