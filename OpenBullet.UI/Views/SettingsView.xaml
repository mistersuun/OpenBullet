<UserControl x:Class="OpenBullet.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" />
            <TextBlock Text="Application settings and preferences" FontSize="14" Opacity="0.7" />
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- General Settings -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="General" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Application Theme" FontWeight="SemiBold"/>
                                <TextBlock Text="Choose your preferred application theme" FontSize="12" Opacity="0.7"/>
                            </StackPanel>
                            <ComboBox Grid.Column="1" SelectedItem="{Binding SelectedTheme}">
                                <ComboBoxItem Content="Dark Theme"/>
                                <ComboBoxItem Content="Light Theme"/>
                                <ComboBoxItem Content="Auto (System)"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start with Windows" FontWeight="SemiBold"/>
                                <TextBlock Text="Automatically start application when Windows starts" FontSize="12" Opacity="0.7"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1" IsChecked="{Binding StartWithWindows}" 
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Performance Settings -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Performance" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Max Concurrent Jobs" FontWeight="SemiBold"/>
                                <TextBlock Text="Maximum number of jobs that can run simultaneously" FontSize="12" Opacity="0.7"/>
                            </StackPanel>
                            <Slider Grid.Column="1" Minimum="1" Maximum="10" Value="{Binding MaxConcurrentJobs}" 
                                    TickFrequency="1" IsSnapToTickEnabled="True"/>
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Default Bot Count" FontWeight="SemiBold"/>
                                <TextBlock Text="Default number of bots per job" FontSize="12" Opacity="0.7"/>
                            </StackPanel>
                            <TextBox Grid.Column="1" Text="{Binding DefaultBotCount}"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Action Buttons -->
                <materialDesign:Card Padding="16">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Command="{Binding ResetToDefaultsCommand}" Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Restore" Margin="0,0,4,0"/>
                                <TextBlock Text="Reset to Defaults"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                                Command="{Binding SaveSettingsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,4,0"/>
                                <TextBlock Text="Save Settings"/>
                            </StackPanel>
                        </Button>
            </StackPanel>
        </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
